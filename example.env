# TDX API Configuration
TDX_WEBSERVICES_KEY="xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
TDX_BEID="xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
TDX_BASE_URL="https://yourdeployment.teamdynamix.com"
TDX_APP_ID=2717

# Database Configuration (RAG App)
# DB_HOST is "localhost" for local dev, "db" when running in Docker Compose
DB_HOST="localhost"
DB_USER="postgres"
DB_PASSWORD="your_password_here"
DB_NAME="TDX"

# LiteLLM Database (separate user/database on shared PostgreSQL)
LITELLM_DB_USER="llmproxy"
LITELLM_DB_PASSWORD="your_litellm_db_password_here"
LITELLM_DB_NAME="litellm"

# LiteLLM Proxy Configuration
# All AI API calls (embedding, chat, reranking) go through the LiteLLM proxy.
# Model names are aliases defined in litellm_config.yml.
LITELLM_PROXY_BASE_URL="http://localhost:4000"
LITELLM_PROXY_API_KEY="your_litellm_proxy_api_key_here"

# LiteLLM Model Aliases (optional, defaults shown)
LITELLM_EMBEDDING_MODEL="text-embedding-large-3"
LITELLM_CHAT_MODEL="gpt-5.2-chat"
LITELLM_RERANKER_MODEL="cohere-rerank-v3-5"

# LiteLLM Embedding Config (optional, defaults shown)
LITELLM_EMBED_DIM=3072
LITELLM_EMBED_MAX_TOKENS=8191

# LiteLLM Chat Config (optional, defaults shown)
LITELLM_CHAT_MAX_TOKENS=8191
LITELLM_CHAT_COMPLETION_TOKENS=500
LITELLM_CHAT_TEMPERATURE=0.7

# API Authentication and Configuration
API_API_KEY="your-secret-api-key-min-32-chars-recommended"
API_ALLOWED_API_KEYS=""  # Optional: comma-separated list for multiple keys

# API Connection Pool (optional, defaults shown)
API_POOL_MIN_SIZE=5
API_POOL_MAX_SIZE=20
API_POOL_TIMEOUT=30.0

# API Server Configuration (optional, defaults shown)
API_HOST="0.0.0.0"
API_PORT=8000
API_WORKERS=4
API_LOG_LEVEL="info"

# Open WebUI
OPEN_WEBUI_PORT=3000

# LiteLLM Proxy Admin
LITELLM_MASTER_KEY=yourkey
LITELLM_SALT_KEY=yoursalt
UI_USERNAME=username
UI_PASSWORD=password
AZURE_API_BASE=https://yourdeployment.openai.azure.com/
AZURE_API_KEY=yourapikey
AWS_ACCESS_KEY_ID=youraccesskeyid
AWS_SECRET_ACCESS_KEY=yoursecretaccesskey
AWS_REGION_NAME=us-east-2